      p.d-none.d-xl-block.m-0 Контакты
  li.nav-item.px-2.small(role='presentation')
    button.nav-button(id='chat', data-bs-toggle='tab', data-bs-target='#chat-tab-pane', type='button', role='tab', aria-controls='chat-tab-pane', aria-selected='true')
      img.filter-light.mx-2(src='images/sprite.svg#chat', alt='chat image', width='25px', height='35px')
      p.d-none.d-xl-block.m-0 Сообщения
  li.nav-item.px-2.small(role='presentation')
    button.nav-button(id='profile', data-bs-toggle='tab', data-bs-target='#profile-tab-pane', type='button', role='tab', aria-controls='profile-tab-pane', aria-selected='true')    
      img.filter-light.mx-2(src='images/sprite.svg#person', alt='profile image', width='25px', height='35px')
      p.d-none.d-xl-block.m-0 Профиль
