doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='icon', type='image/x-icon', href='favicon.ico')

    title layout-designer-project-lvl3

    link(rel='stylesheet', href='../styles/app.css')

  body
    .container-xxl.vh-100.chat.shadow-sm
      .row.vh-100
        .col-12.col-xl-4.sidebar.vh-100
          .row.menu.bg-primary
            .col.p-0
              ul.nav.m-4(id='myTab', role='tablist')
                li.nav-logo
                  img.filter-white(src='images/sprite.svg#logo', alt='hexlet logo', width='25px', height='35px')
                li.nav-item.px-2.small(role='presentation')
                  button.nav-button.active(id='contacts', data-bs-toggle='tab', data-bs-target='#contacts-tab-pane', type='button', role='tab', aria-controls='contacts-tab-pane', aria-selected='true')
                    img.filter-light.mx-2(src='images/sprite.svg#people', alt='contacts image', width='25px', height='35px')
                    p.nav-item-name.m-0 Контакты
                li.nav-item.px-2.small(role='presentation')
                  button.nav-button(id='chat', data-bs-toggle='tab', data-bs-target='#chat-tab-pane', type='button', role='tab', aria-controls='chat-tab-pane', aria-selected='true')
                    img.filter-light.mx-2(src='images/sprite.svg#chat', alt='chat image', width='25px', height='35px')
                    p.nav-item-name.m-0 Сообщения
                li.nav-item.px-2.small(role='presentation')
                  button.nav-button(id='profile', data-bs-toggle='tab', data-bs-target='#profile-tab-pane', type='button', role='tab', aria-controls='profile-tab-pane', aria-selected='true')    
                    img.filter-light.mx-2(src='images/sprite.svg#person', alt='profile image', width='25px', height='35px')
                    p.nav-item-name.m-0 Профиль
          .row
            .col.pt-5.px-4
              .tab-content(id='myTabContent')
                .tab-pane.fade.show.active(id='contacts-tab-pane', role='tabpanel', aria-labelledby='contact-tab', tabindex='0')
                  include components/contacts.pug
                .tab-pane.fade(id='chat-tab-pane', role='tabpanel', aria-labelledby='chat-tab', tabindex='0')
                  include components/chat-messages.pug
                .tab-pane.fade(id='profile-tab-pane', role='tabpanel', aria-labelledby='profile-tab', tabindex='0') Банан
        .col-8.relative.chat-box
          include components/chat-greeting.pug

  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js', integrity='sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk', crossorigin='anonymous')
